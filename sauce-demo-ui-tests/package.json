{
  "name": "sauce-demo-e2e-tests",
  "version": "1.0.0",
  "description": "Playwright UI automation tests for Sauce Demo e-commerce application",
  "main": "index.js",
  "scripts": {
    "codegen": "playwright codegen",
    "prettier": "prettier --write .",
    "lint": "eslint src tests",
    "type-check": "tsc --noEmit",
    "pretest": "npm run type-check && npm run lint",
    "test": "npx playwright test",
    "test:local": "NODE_ENV=local npx playwright test",
    "test:ci": "NODE_ENV=ci CI=true npx playwright test",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:regression": "npx playwright test --grep @regression",
    "test:headed": "HEADLESS=false npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "test:debug": "HEADLESS=false npx playwright test --debug",
    "prepare": "husky"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation",
    "sauce-demo"
  ],
  "author": "Adam Thao",
  "license": "ISC",
  "dependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@eslint/js": "^9.15.0",
    "@faker-js/faker": "^9.2.0",
    "@playwright/test": "^1.48.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.9.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
