# Test stage - includes dev dependencies and test files
FROM node:20-alpine

WORKDIR /app

# Install Docker CLI for Testcontainers
RUN apk add --no-cache docker-cli

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm ci

# Copy source and test files
COPY tsconfig.json ./
COPY jest.config.js ./
COPY src/ ./src/
COPY tests/ ./tests/

# Run tests
CMD ["npm", "test"]
