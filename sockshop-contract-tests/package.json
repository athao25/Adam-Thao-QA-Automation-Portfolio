{
  "name": "sockshop-contract-tests",
  "version": "1.0.0",
  "description": "Consumer-Driven Contract Testing Suite for Sock Shop Microservices using Pact-JS",
  "author": "Adam Thao",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "pretest": "npm run build && npm run lint",
    "test": "jest --runInBand",
    "test:consumer": "jest tests/consumer --runInBand",
    "test:provider": "jest tests/provider --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "jest --runInBand --ci --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@pact-foundation/pact": "^12.1.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "keywords": [
    "pact",
    "contract-testing",
    "cdc",
    "microservices",
    "sock-shop",
    "api-testing"
  ]
}
